@model List<Domain.Interfaces.IItemValidating>

@{
    ViewData["Title"] = "Import Preview";
}

<h2>Import Preview</h2>
@if (Model?.Any() == true)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Preview of Items to Import</h5>
            <p class="mb-0 text-muted small">Total Items: @Model.Count</p>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <div class="card-header">
                                @if (item is Restaurant)
                                {
                                    <span class="badge bg-primary">Restaurant</span>
                                }
                                else if (item is MenuItem)
                                {
                                    <span class="badge bg-success">Menu Item</span>
                                }
                            </div>
                            <div class="card-body">
                                @if (item is Restaurant restaurant)
                                {
                                    <h5 class="card-title">@restaurant.Name</h5>
                                    <p class="card-text">@restaurant.Description</p>
                                    <div class="row">
                                        <div class="col-6">
                                            <small><strong>Phone:</strong> @restaurant.Phone</small>
                                        </div>
                                        <div class="col-6">
                                            <small><strong>Address:</strong> @restaurant.Address</small>
                                        </div>
                                    </div>
                                }
                                else if (item is MenuItem menuItem)
                                {
                                    <h5 class="card-title">@menuItem.Title</h5>
                                    <div class="row">
                                        <div class="col-6">
                                            <small><strong>Price:</strong> @menuItem.Price.ToString("C")</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Image Template</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Download Image Template</h6>
                    <p class="text-muted small">
                        Download the ZIP template containing folders for each item. Replace the default images
                        while keeping the folder structure, then upload the modified ZIP.
                    </p>
                    <a href="@Url.Action("DownloadTemplate")" class="btn btn-primary">
                        <i class="fas fa-download"></i> Download Template ZIP
                    </a>
                </div>
                <div class="col-md-6">
                    <h6>Upload Modified Images</h6>
                    <form asp-action="CommitImport" method="post" enctype="multipart/form-data">
                        <div class="mb-2">
                            <input type="file" name="zipFile" class="form-control" accept=".zip" required />
                        </div>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-upload"></i> Commit Import with Images
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        No items to import.
    </div>
    <a asp-action="Index" class="btn btn-primary">Back to Import</a>
}