@model List<Domain.Interfaces.IItemValidating>

@{
    ViewData["Title"] = "Import Preview";
}

<h2>Import Preview</h2>

@if (Model?.Any() == true)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Image Template</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Download Image Template</h6>
                    <p class="text-muted small">
                        Download the ZIP template containing folders for each item. Replace the default images
                        while keeping the folder structure, then upload the modified ZIP.
                    </p>
                    <a href="@Url.Action("DownloadTemplate")" class="btn btn-primary">
                        <i class="fas fa-download"></i> Download Template ZIP
                    </a>
                </div>
                <div class="col-md-6">
                    <h6>Upload Modified Images</h6>
                    <form asp-action="CommitImport" method="post" enctype="multipart/form-data">
                        <div class="mb-2">
                            <input type="file" name="zipFile" class="form-control" accept=".zip" required />
                        </div>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-upload"></i> Commit Import with Images
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="ProcessImport" method="post">
        <div class="alert alert-info">
            <strong>Preview:</strong> The following @Model.Count items will be imported. Review before proceeding.
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Name/Title</th>
                    <th>Details</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr>
                        <td>@item.GetType().Name</td>
                        <td>
                            @if (item is Enterprise_Assignment.Models.Restaurant restaurant)
                            {
                                @restaurant.Name
                                <input type="hidden" name="[@i].Type" value="Restaurant" />
                                <input type="hidden" name="[@i].Id" value="0" />
                                <input type="hidden" name="[@i].Name" value="@restaurant.Name" />
                                <input type="hidden" name="[@i].OwnerEmailAddress" value="@restaurant.OwnerEmailAddress" />
                                <input type="hidden" name="[@i].Status" value="@restaurant.Status" />
                                <input type="hidden" name="[@i].ImageUrl" value="@restaurant.ImageUrl" />
                            }
                            else if (item is Enterprise_Assignment.Models.MenuItem menuItem)
                            {
                                @menuItem.Title
                                <input type="hidden" name="[@i].Type" value="MenuItem" />
                                <input type="hidden" name="[@i].Id" value="@menuItem.Id" />
                                <input type="hidden" name="[@i].Title" value="@menuItem.Title" />
                                <input type="hidden" name="[@i].Price" value="@menuItem.Price" />
                                <input type="hidden" name="[@i].RestaurantFK" value="@menuItem.RestaurantFK" />
                                <input type="hidden" name="[@i].Status" value="@menuItem.Status" />
                                <input type="hidden" name="[@i].ImageUrl" value="@menuItem.ImageUrl" />
                            }
                        </td>
                        <td>
                            @if (item is Enterprise_Assignment.Models.Restaurant r)
                            {
                                <text>Owner: @r.OwnerEmailAddress</text>
                            }
                            else if (item is Enterprise_Assignment.Models.MenuItem m)
                            {
                                <text>Price: €@m.Price, Restaurant: @m.RestaurantFK</text>
                            }
                        </td>
                        <td>@item.GetType().GetProperty("Status")?.GetValue(item)</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Confirm Import (Without Custom Images)</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
}
else
{
    <div class="alert alert-warning">
        No items to import.
    </div>
    <a asp-action="Index" class="btn btn-primary">Back to Import</a>
}